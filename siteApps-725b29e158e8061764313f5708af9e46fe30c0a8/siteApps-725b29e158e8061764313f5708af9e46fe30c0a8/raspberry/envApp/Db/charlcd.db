record(ai, "$(SYS)-$(SUBSYS):$(DEV):CLK")
{
  field(SCAN, "1 second")
  field(FLNK, "$(SYS)-$(SUBSYS):$(DEV):STR")
}

record(lcdout, "$(SYS)-$(SUBSYS):$(DEV):STR")
{
  field(DTYP, "HD44780U")
  field(OUT, "@4 16 8 28 29 0 1 2 3 4 5 6 7")
  field(DIRS, "0")
  field(INPA, "$(SYS)-$(SUBSYS):$(DEV):TEM")
  field(STRA, "Tem: ")
  field(UNIA, " C")
  field(INPB, "$(SYS)-$(SUBSYS):$(DEV):HUM")
  field(STRB, "Hum: ")
  field(UNIB, " %")
  field(INPC, "$(SYS)-$(SUBSYS):$(DEV):PRE")
  field(STRC, "Pre: ")
  field(UNIC, " hPa")  
}
